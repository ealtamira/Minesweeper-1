<Window x:Class="MineSweeperMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MineSweeper" Height="800" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <!-- Reset Button -->
        <Button x:Name="Reset"
                Content="Reset"
                Width="100" Height="50"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="Reset_Click"/>

        <!-- Timer Label -->
        <Label x:Name="TimerLabel"
               Content="Time: 000"
               Background="Black"
               Foreground="Red"
               Width="150" Height="80"
               FontFamily="Algerian"
               FontSize="33"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
                HorizontalAlignment="Left"
               Margin="50,20,0,0"/>

        <!-- Mines Left Label -->
        <Label x:Name="MinesLabel"
                Content="Mines: 000"
                Background="Black"
                Foreground="Red"
                Width="150" Height="80"
                FontFamily="Algerian"
                FontSize="33"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,20,50,0"
            />
        
        <!-- Game Board Grid -->
        <Image x:Name="GameBoard"
               Width="704" Height="704"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"/>
    </Grid>
</Window>
