<Page x:Class="Minesweeper.Pages.GameBoardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Minesweeper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="600"
      Title="GameBoard">

    <Grid>

        <!-- Game Board -->
        <ScrollViewer  Height="500" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas Name="GameBoard" 
                    Background="LightGray"/>
        </ScrollViewer>


            <!-- Back & Reset -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="ResetButton"
            Content="Reset"
            Click="Reset_Click"
            Style="{StaticResource ModernButtonStyle}"/>

            <Button x:Name="BackButton"
            Content="Back"
            Click="Back_Click"
            Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>


        <!-- Timer -->
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" 
                Background="Black" Padding="5"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <TextBlock Name="TimerText"
            Text="000"
            FontFamily="Consolas"
            FontSize="32"
            Foreground="Red"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        </Border>


        <!-- Mines left -->
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5"
                Background="Black" Padding="5"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <TextBlock Name="MinesLeftText"
                       Text="010"
                       FontFamily="Consolas"
                       FontSize="32"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
