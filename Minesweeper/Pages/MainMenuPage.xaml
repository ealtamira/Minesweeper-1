<Page x:Class="Minesweeper.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainMenuPage">

    <StackPanel Style="{StaticResource MainMenuStackPanelStyle}">
        <TextBlock Text="Minesweeper" Style="{StaticResource MainMenuTitleStyle}" Background="Black" Padding="25" FontFamily="Unispace"/>
        <Button Content="Start Game" Style="{StaticResource CoolButtonStyle}" Width="200" Height="50" Click="StartGameButton_Click"/>
        <Button Content="Settings" Style="{StaticResource CoolButtonStyle}" Width="200" Height="50" Click="Setting_Click"/>
        <Button Content="Exit" Style="{StaticResource CoolButtonStyle}" Width="200" Height="50" Click="Exit_Click"/>
    </StackPanel>
</Page>
