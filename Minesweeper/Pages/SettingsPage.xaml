<Page x:Class="Minesweeper.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SettingsPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Settings" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Board Size -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Board Size:" VerticalAlignment="Center"/>
            <TextBox x:Name="BoardSizeBox" Width="50" Text="10"/>
        </StackPanel>

        <!-- Mines Count -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Mines:" VerticalAlignment="Center"/>
            <TextBox x:Name="MineCountBox" Width="50" Text="10"/>
        </StackPanel>


        <!-- Background Selector -->
        <TextBlock Text="Background:" Margin="0,10,0,5"/>
        <WrapPanel>
            <RadioButton x:Name="Bg1Radio" Content="Background 1" GroupName="Backgrounds" IsChecked="True" Checked="BackgroundRadio_Checked" Margin="5"/>
            <RadioButton x:Name="Bg2Radio" Content="Background 2" GroupName="Backgrounds" Checked="BackgroundRadio_Checked" Margin="5"/>
            <RadioButton x:Name="Bg3Radio" Content="Background 3" GroupName="Backgrounds" Checked="BackgroundRadio_Checked" Margin="5"/>
            <RadioButton x:Name="Bg4Radio" Content="Background 4" GroupName="Backgrounds" Checked="BackgroundRadio_Checked" Margin="5"/>
        </WrapPanel>
        <Border x:Name="PreviewArea" Width="300" Height="200" Margin="0,10,0,10" BorderBrush="Black" BorderThickness="1">
            <!-- Background will update dynamically -->
        </Border>


        <!-- Save & Back Button -->
        <Button Content="Save → Back" Width="200" Height="40" Click="Save_Click" Margin="0,20,0,0"/>
    </StackPanel>
</Page>
