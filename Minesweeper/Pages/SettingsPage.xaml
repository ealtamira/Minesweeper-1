<Page x:Class="Minesweeper.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SettingsPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Settings" FontSize="24"/>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Board Size:" VerticalAlignment="Center"/>
            <TextBox x:Name="BoardSizeBox" Width="50" Text="10"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Mines:" VerticalAlignment="Center"/>
            <TextBox x:Name="MineCountBox" Width="50" Text="10"/>
        </StackPanel>

        <Button Content="Save → Back" Width="200" Height="40" Click="Save_Click"/>
    </StackPanel>
</Page>
