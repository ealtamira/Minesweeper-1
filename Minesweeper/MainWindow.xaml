<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Minesweeper" Height="700" Width="600">
    <Grid>
        
        <!-- Game Board -->
        <Canvas Name="GameBoard" 
                Width="500" Height="500" 
                Background="LightGray" />

        <!-- Reset Button -->
        <Button Name="ResetButton"
        Content="🙂"
        FontSize="30"
        Width="60" Height="60"
        Background="LightGray"
        BorderBrush="Gray"
        BorderThickness="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Top" Margin="0,10,0,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>



        <!-- Timer -->
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" 
        Background="Black" Padding="5"
        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <TextBlock Name="TimerText"
               Text="000"
               FontFamily="Consolas"
               FontSize="32"
               Foreground="Red"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Border>


        <!-- Mines left -->
        <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5"
        Background="Black" Padding="5"
        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <TextBlock Name="MinesLeftText"
               Text="010"
               FontFamily="Consolas"
               FontSize="32"
               Foreground="Red"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Border>


    </Grid>
</Window>
